{
  "name": "syncollege",
  "author": "ccnuyan",
  "version": "1.0.0",
  "description": "word war, war of wordcraft",
  "scripts": {
    "start": "babel-node server",
    "start-dev": "cross-env NODE_ENV=development && babel-node ./server/index",
    "db-build": "babel-node ./database/index build",
    "db-functions-build": "babel-node ./database/index functions-build",
    "db-dev": "nodemon --config nodemon/nodemon.database-dev.json --delay 1000ms",
    "db-functions-dev": "nodemon --config nodemon/nodemon.database-functions-dev.json --delay 1000ms",
    "db-install": "babel-node ./database/index install",
    "wp-dev": "cross-env NODE_ENV=development && webpack-dev-server --host 127.0.0.1",
    "wp-build": "cross-env NODE_ENV=production && webpack --config=webpack.build-config.js",
    "wp-build-dev": "cross-env NODE_ENV=development && webpack --config=webpack.build-dev-config.js",
    "server-dev": "nodemon --config nodemon/nodemon.server.json --delay 1000ms",
    "db-test": "mocha --opts ./mocha.opts ./database/test/**/*.spec.js",
    "api-test": "mocha --opts ./mocha.opts ./src/api/test/**/*.spec.js",
    "test": "mocha --opts ./mocha.opts ./src/api/test/**/*.spec.js ./database/test/**/*.spec.js",
    "build-install-test": "npm run db-build && npm run db-install && npm run test",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  },
  "license": "MIT",
  "#comment# - browserslist": "for postcss autoprefix, which is in ./webpack/postcss.config.js",
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie <= 8"
  ],
  "dependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "body-parser": "^1.17.1",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.0.1",
    "express": "^4.15.2",
    "express-delay": "^0.2.0",
    "express-session": "^1.15.6",
    "file-size": "^1.0.0",
    "jsonwebtoken": "^7.4.1",
    "morgan": "^1.9.0",
    "pg": "^6.2.2",
    "request": "^2.81.0",
    "qiniu": "^7.1.1"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "css-loader": "^0.28.0",
    "env-test": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-mocha": "^4.9.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "fine-uploader": "^5.15.0",
    "html-loader": "^0.4.5",
    "husky": "^0.14.3",
    "immutable": "^3.8.1",
    "lint-staged": "^3.6.1",
    "markdown-loader": "^2.0.0",
    "pixrem": "^3.0.2",
    "pleeease-filters": "^3.0.1",
    "postcss-calc": "^5.3.1",
    "postcss-color-function": "^3.0.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-custom-selectors": "^3.0.0",
    "postcss-flexbugs-fixes": "^2.1.1",
    "postcss-loader": "^1.3.3",
    "postcss-media-minmax": "^2.1.2",
    "postcss-nested": "^1.0.1",
    "postcss-nesting": "^2.3.1",
    "postcss-partial-import": "^3.1.1",
    "postcss-selector-matches": "^2.0.5",
    "postcss-selector-not": "^2.0.0",
    "postcss-url": "^6.0.4",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-transition": "^1.1.2",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.7.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.16.1",
    "supertest": "^3.0.0",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "url-loader": "^0.5.9",
    "webpack": "^3.10.0",
    "whatwg-fetch": "^2.0.3"
  },
  "#comment# - eslintConfig": "http://eslint.org/docs/user-guide/configuring",
  "#comment# - eslint-plugin-react": "https://github.com/yannickcr/eslint-plugin-react",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "parser": "babel-eslint",
    "plugins": [
      "standard",
      "import",
      "mocha",
      "jsx-a11y",
      "react",
      "promise"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react/recommended",
      "plugin:mocha/recommended",
      "plugin:promise/recommended",
      "airbnb/base"
    ],
    "env": {
      "mocha": true,
      "browser": true,
      "es6": true
    },
    "globals": {
      "$": true,
      "printError": true,
      "printMessage": true,
      "Qiniu": true,
      "chai": true,
      "expect": true,
      "should": true
    },
    "rules": {
      "camelcase": 0,
      "no-underscore-dangle": 0,
      "consistent-return": 0,
      "no-unused-expressions": 0,
      "max-len": [
        "error",
        160
      ],
      "import/no-extraneous-dependencies": 0,
      "arrow-body-style": 0,
      "no-return-assign": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-closing-bracket-location": 2,
      "react/jsx-curly-spacing": [
        2,
        "always"
      ],
      "react/no-set-state": 0,
      "react/jsx-indent": [
        2,
        2
      ],
      "id-length": 0,
      "object-curly-spacing": [
        2,
        "always"
      ]
    }
  }
}
